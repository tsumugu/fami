<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cellRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radv"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView_cell"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/TextView_cell"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_cell"
        android:layout_alignStart="@+id/imageView_cell"
        android:text="IN 18:12"
        android:textAlignment="center"
        android:textColor="@color/colorSnackbarText"
        android:textSize="16dp" />
</RelativeLayout>
